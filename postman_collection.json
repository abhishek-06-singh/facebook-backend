        },
        {
          "name": "Get Messages",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/messages/{{conversationId}}?limit=20&cursorCreatedAt=&cursorId=",
              "host": ["{{baseUrl}}"],
              "path": ["messages", "{{conversationId}}"],
