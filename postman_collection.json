          "name": "Get Feed",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/feed?limit=10&cursorCreatedAt=&cursorId=",
              "host": ["{{baseUrl}}"],
              "path": ["feed"],
              "query": [
                { "key": "limit", "value": "10" },
                { "key": "cursorCreatedAt", "value": "" },
                { "key": "cursorId", "value": "" }
